<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ClimateSenseMAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ClimateSenseMAUI.View"
    xmlns:vm="clr-namespace:ClimateSenseMAUI.ViewModel"
    Title="ClimateSenseMAUI"
    x:DataType="vm:NotificationViewModel"
    FlyoutBehavior="Disabled">

    <Shell.TitleView>
        <Button
            Margin="2"
            BackgroundColor="White"
            BorderColor="#cae9f3"
            BorderWidth="2"
            Command="{Binding OpenNotificationPageCommand}"
            CornerRadius="50"
            HeightRequest="40"
            HorizontalOptions="Start"
            Text="{Binding Notifications.Count}"
            TextColor="Black"
            WidthRequest="40" />
    </Shell.TitleView>

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:LoginPage}"
        Route="LoginPage" />

    <ShellContent
        Title="Dashboard"
        ContentTemplate="{DataTemplate local:DashboardPage}"
        Route="DashboardPage" />

</Shell>