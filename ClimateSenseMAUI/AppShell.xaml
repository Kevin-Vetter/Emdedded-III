<?xml version="1.0" encoding="UTF-8"?>
<Shell
    x:Class="ClimateSenseMAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ClimateSenseMAUI.View"
    Title="ClimateSenseMAUI"
    FlyoutBehavior="Disabled"
    xmlns:vm="clr-namespace:ClimateSenseMAUI.ViewModel"
    x:DataType="vm:NotificationViewModel">

    <Shell.TitleView>
        <StackLayout>
            <Button HorizontalOptions="Start" CornerRadius="50" BorderColor="#cae9f3" BorderWidth="2" TextColor="Black" Margin="2" BackgroundColor="White" HeightRequest="40" WidthRequest="40" Command="{Binding OpenNotificationPageCommand}" Text="{Binding Notifications.Count}" />
        </StackLayout>
    </Shell.TitleView>

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:LoginPage}"
        Route="LoginPage" />

    <ShellContent
        Title="Dashboard"
        ContentTemplate="{DataTemplate local:DashboardPage}"
        Route="DashboardPage"/>

</Shell>