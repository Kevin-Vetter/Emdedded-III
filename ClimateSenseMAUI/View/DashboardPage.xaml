<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClimateSenseMAUI.View.DashboardPage"
             xmlns:models="clr-namespace:ClimateSenseModels;assembly=ClimateSenseModels"
             xmlns:vm="clr-namespace:ClimateSenseMAUI.ViewModel"
             x:DataType="vm:DashboardViewModel"
             Title="Dashboard">
    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsVisible="False" IsEnabled="False" />
    </Shell.BackButtonBehavior>
    <ContentPage.ToolbarItems>
        <!--<ToolbarItem Command="{Binding OpenSettingsCommand}" IconImageSource="gear.png" />-->
        <ToolbarItem Command="{Binding LogOutCommand}" IconImageSource="bye.png"/>
    </ContentPage.ToolbarItems>

    <CollectionView ItemsSource="{Binding RoomList}" SelectionMode="None">
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="models:DashboardRooms">
                <Frame>
                    <Frame.GestureRecognizers>

                        <TapGestureRecognizer
                            Command="{Binding Source={RelativeSource AncestorType={x:Type vm:DashboardViewModel}}, Path=GoToRoomDetailsCommand}"
                            CommandParameter="{Binding .}" />
                    </Frame.GestureRecognizers>
                    <Grid RowDefinitions="*,*">
                        <Label
                            Grid.Row="0"
                            FontSize="16"
                            LineBreakMode="NoWrap"
                            TextColor="Black"
                            Text="{Binding RoomName}"
                            VerticalTextAlignment="Center" />

                        <CollectionView Grid.Row="1" ItemsSource="{Binding CurrentMeasurements}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="models:Measurement">
                                    <StackLayout>
                                        <Label Text="Type: " />
                                        <Label Text="{Binding MeasurementType}" />
                                        <Label Text="VÃ¦rdi: " />
                                        <Label Text="{Binding Value}" />
                                    </StackLayout>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </Grid>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>