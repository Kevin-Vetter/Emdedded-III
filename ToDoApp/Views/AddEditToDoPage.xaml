<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:ToDoApp.ViewModels"
    x:DataType="vm:AddEditToDoViewModel"
    x:Class="ToDoApp.Views.AddEditToDoPage"
    Title="{Binding Title}">
    <ContentPage.Resources>

        <Style TargetType="Button">
            <Setter Property="Margin"
                    Value="5" />
        </Style>
    </ContentPage.Resources>

    <VerticalStackLayout Margin="20">
        <Label Text="Name" />
        <Entry Placeholder="Enter item" Text="{Binding Path=Item.Description}" />
        <Label Text="Notes" />
        <Entry Placeholder="Enter notes" Text="{Binding Path=Item.Id}" />
        <Label Text="Done" />
        <Switch IsToggled="{Binding Path=Item.Completed}" />
        <Button Command="{Binding SaveCommand}" Text="Save" />
        <Button Command="{Binding DeleteCommand}" Text="Delete"/>
        <Button Command="{Binding CancelCommand}" Text="Cancel"/>
    </VerticalStackLayout>

</ContentPage>